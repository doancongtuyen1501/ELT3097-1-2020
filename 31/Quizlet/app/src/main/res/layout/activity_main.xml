<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorLightGray">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/toolbar">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">

          <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="200dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_full_screen" />

              <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/word_1" />

            </RelativeLayout>

          </androidx.cardview.widget.CardView>

          <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="200dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_full_screen" />

              <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/word_2" />

            </RelativeLayout>

          </androidx.cardview.widget.CardView>

          <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="200dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_full_screen" />

              <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/word_3" />

            </RelativeLayout>

          </androidx.cardview.widget.CardView>

          <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="200dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_full_screen" />

              <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/word_4" />

            </RelativeLayout>

          </androidx.cardview.widget.CardView>

        </LinearLayout>
      </HorizontalScrollView>

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
          android:id="@+id/avatarImageView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_below="@id/titleTextView"
          android:layout_marginHorizontal="16dp"
          android:src="@drawable/ic_live" />

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:src="@drawable/ic_download" />

        <TextView
          android:id="@+id/nameTextView"
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/titleTextView"
          android:layout_marginVertical="10dp"
          android:layout_toRightOf="@id/avatarImageView"
          android:text="Name"
          android:textColor="#000000"
          android:textSize="16dp" />

        <TextView
          android:id="@+id/amoutWordTextView"
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/titleTextView"
          android:layout_marginHorizontal="32dp"
          android:layout_marginVertical="10dp"
          android:layout_toRightOf="@id/nameTextView"
          android:text="4 terms"
          android:textColor="#000000"
          android:textSize="16dp" />

        <TextView
          android:id="@+id/descriptionTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          android:layout_below="@id/avatarImageView"
          android:text="ETS 2020 - English Exchange"
          android:textColor="#000000" />

        <TextView
          android:id="@+id/titleTextView"
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:layout_marginHorizontal="16dp"
          android:text="Toeic"
          android:textColor="#000000"
          android:textSize="25dp" />

      </RelativeLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:orientation="horizontal"
          android:weightSum="2">
          <Button
            android:id="@+id/learnButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:layout_marginVertical="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:text="LEARN"
            android:fontFamily="@font/glyphs_h156_regular"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:paddingTop="16dp"
            android:drawableTop="@drawable/ic_learn" />

          <Button
            android:id="@+id/flashCardButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:layout_marginVertical="16dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="16dp"
            android:text="FLASHCARDS"
            android:fontFamily="@font/glyphs_h156_regular"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:paddingTop="24dp"
            android:drawableTop="@drawable/ic_cards" />

        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:weightSum="3">

          <Button
            android:id="@+id/writeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="16dp"
            android:text="WRITE"
            android:fontFamily="@font/glyphs_h156_regular"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:paddingTop="20dp"
            android:drawableTop="@drawable/ic_write"/>

          <Button
            android:id="@+id/matchButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="16dp"
            android:text="MATCH"
            android:fontFamily="@font/glyphs_h156_regular"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:paddingTop="28dp"
            android:drawableTop="@drawable/ic_match" />

          <Button
            android:id="@+id/testButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="16dp"
            android:text="TEST"
            android:fontFamily="@font/glyphs_h156_regular"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:paddingTop="20dp"
            android:drawableTop="@drawable/ic_test" />

        </LinearLayout>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cards"
            android:layout_marginLeft="16dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"/>

"       </RelativeLayout>

        <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:layout_marginHorizontal="16dp"
          android:layout_marginTop="16dp">

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
              android:id="@+id/speakWord1Button"
              android:layout_width="330dp"
              android:layout_height="wrap_content"
              android:background="@android:color/transparent"
              android:text="@string/word_1"
              android:textAllCaps="false"
              android:textColor="@color/colorDarkGray"
              android:layout_marginLeft="12dp"
              android:textAlignment="viewStart"
              android:drawableRight="@drawable/ic_speak"/>

            <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_star_border"
              android:layout_marginTop="24dp"
              android:layout_marginHorizontal="16dp"
              android:layout_toRightOf="@id/speakWord1Button"/>

            <TextView
              android:id="@+id/meaningWord1TextView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/meaning_word_1"
              android:textSize="20dp"
              android:textColor="@color/colorDarkGray"
              android:layout_below="@id/speakWord1Button"
              android:layout_marginTop="8dp"
              android:layout_marginHorizontal="12dp"/>

          </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:layout_marginHorizontal="16dp"
          android:layout_marginTop="16dp">

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
              android:id="@+id/speakWord2Button"
              android:layout_width="330dp"
              android:layout_height="wrap_content"
              android:background="@android:color/transparent"
              android:text="@string/word_2"
              android:textAllCaps="false"
              android:textColor="@color/colorDarkGray"
              android:layout_marginLeft="12dp"
              android:textAlignment="viewStart"
              android:drawableRight="@drawable/ic_speak"/>

            <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_star_border"
              android:layout_marginTop="24dp"
              android:layout_marginHorizontal="16dp"
              android:layout_toRightOf="@id/speakWord2Button"/>

            <TextView
              android:id="@+id/meaningWord2TextView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/meaning_word_2"
              android:textAllCaps="false"
              android:textSize="20dp"
              android:textColor="@color/colorDarkGray"
              android:layout_below="@id/speakWord2Button"
              android:layout_marginTop="8dp"
              android:layout_marginHorizontal="12dp"/>

          </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:layout_marginHorizontal="16dp"
          android:layout_marginTop="16dp">

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
              android:id="@+id/speakWord3Button"
              android:layout_width="330dp"
              android:layout_height="wrap_content"
              android:background="@android:color/transparent"
              android:text="@string/word_3"
              android:textAllCaps="false"
              android:textColor="@color/colorDarkGray"
              android:layout_marginLeft="12dp"
              android:textAlignment="viewStart"
              android:drawableRight="@drawable/ic_speak"/>

            <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_star_border"
              android:layout_marginTop="24dp"
              android:layout_marginHorizontal="16dp"
              android:layout_toRightOf="@id/speakWord3Button"/>

            <TextView
              android:id="@+id/meaningWord3TextView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/meaning_word_3"
              android:textAllCaps="false"
              android:textSize="20dp"
              android:textColor="@color/colorDarkGray"
              android:layout_below="@id/speakWord3Button"
              android:layout_marginTop="8dp"
              android:layout_marginHorizontal="12dp"/>

          </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:layout_marginHorizontal="16dp"
          android:layout_marginVertical="16dp">

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
              android:id="@+id/speakWord4Button"
              android:layout_width="330dp"
              android:layout_height="wrap_content"
              android:background="@android:color/transparent"
              android:text="@string/word_4"
              android:textColor="@color/colorDarkGray"
              android:layout_marginLeft="12dp"
              android:textAlignment="viewStart"
              android:drawableRight="@drawable/ic_speak"/>

            <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_star_border"
              android:layout_marginTop="24dp"
              android:layout_marginHorizontal="16dp"
              android:layout_toRightOf="@id/speakWord4Button"/>

            <TextView
              android:id="@+id/meaningWord4TextView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/meaning_word_4"
              android:textSize="20dp"
              android:textColor="@color/colorDarkGray"
              android:layout_below="@id/speakWord4Button"
              android:layout_marginTop="8dp"
              android:layout_marginHorizontal="12dp"/>
          </RelativeLayout>

        </androidx.cardview.widget.CardView>

      </LinearLayout>

    </LinearLayout>
  </ScrollView>
  <androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:minHeight="?attr/actionBarSize"
    android:theme="?attr/actionBarTheme">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginHorizontal="16dp">

      <ImageButton
        android:id="@+id/backImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_toolbar_back"
        android:tint="@color/cardview_light_background" />

      <ImageButton
        android:id="@+id/moreImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_toolbar_more" />

      <ImageButton
        android:id="@+id/shareImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:layout_toLeftOf="@id/moreImageButton"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_toolbar_share" />

    </RelativeLayout>

  </androidx.appcompat.widget.Toolbar>
</RelativeLayout>