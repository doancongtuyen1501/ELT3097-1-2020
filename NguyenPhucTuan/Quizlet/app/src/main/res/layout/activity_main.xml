<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/quit_imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <TextView
        android:id="@+id/amoutQuestion_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/quit_imageButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/arrow1_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/exactOnce_textView"
        app:layout_constraintStart_toEndOf="@+id/amoutQuestion_textView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icons8_arrow_24__1_" />

    <TextView
        android:id="@+id/exactOnce_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/exactTwice_textView"
        app:layout_constraintStart_toEndOf="@+id/amoutQuestion_textView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/arrow2_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/exactTwice_textView"
        app:layout_constraintStart_toEndOf="@+id/exactOnce_textView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icons8_arrow_24__1_" />

    <TextView
        android:id="@+id/exactTwice_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/adjust_imageButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/adjust_imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icons8_tune_24" />

    <ImageView
        android:id="@+id/exactOnce_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/exactOnce_textView"
        app:layout_constraintStart_toStartOf="@+id/exactOnce_textView"
        app:layout_constraintTop_toBottomOf="@+id/exactOnce_textView"
        app:srcCompat="@drawable/icons8_checkmark_24" />

    <ImageView
        android:id="@+id/exactTwice_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/exactTwice_textView"
        app:layout_constraintStart_toStartOf="@+id/exactTwice_textView"
        app:layout_constraintTop_toBottomOf="@+id/exactTwice_textView"
        app:srcCompat="@drawable/icons8_double_tick_24" />

    <TextView
        android:id="@+id/question_textView"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:text="Khuyến khích"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/answer1_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/answer1_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/border"
        android:textColor="@drawable/button_answer"
        android:paddingLeft="20dp"
        android:text="persude"
        android:fontFamily="sans-serif"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/answer2_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/answer2_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/border"
        android:textColor="@drawable/button_answer"
        android:text="pesticide"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:paddingLeft="20dp"
        app:layout_constraintBottom_toTopOf="@+id/answer3_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/answer3_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/border"
        android:textColor="@drawable/button_answer"
        android:paddingLeft="20dp"
        android:text="encourage"
        android:fontFamily="sans-serif"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/answer4_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/answer4_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/border"
        android:textColor="@drawable/button_answer"
        android:paddingLeft="20dp"
        android:text="performed"
        android:fontFamily="sans-serif"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FF5722"
        android:progress="0"
        android:progressBackgroundTint="#8C6BE6"
        android:progressBackgroundTintMode="add"
        android:progressTint="#FF743FF1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exactOnce_imageView" />

    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        tools:layout_editor_absoluteX="1dp">

        <TextView
            android:id="@+id/wrong_textView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="16dp"
            android:textSize="24dp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif"
            android:paddingVertical="12dp"
            android:paddingStart="90dp"
            android:layout_centerVertical="true"
            android:background="@drawable/wrong"
            android:text="Sai rồi" />
        <TextView
            android:id="@+id/right_textView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="16dp"
            android:textSize="24dp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif"
            android:paddingVertical="12dp"
            android:paddingStart="90dp"
            android:layout_centerVertical="true"
            android:background="@drawable/right"
            android:text="Tuyệt lắm" />

        <TextView
            android:id="@+id/continue_textView"
            android:layout_below="@+id/wrong_textView"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Nhấn để tiếp tục" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>